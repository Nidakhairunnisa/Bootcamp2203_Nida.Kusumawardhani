<div class="container mt-3">
    <div class="row">
      <div div class="col-md-6">
        <h2>Edit contact form</h2>
        <% if (typeof notif != 'undefined') { %>
          <% notif.forEach(function (alert)  { %>
            <div class="alert alert-danger" role="alert">
              <%= alert.msg %>
            </div>
            <%})%>
        <% } %>  
        <% //console.log(data.name)%>
        <form method="post" action="/detail/update/<%= data.name%>">
          <div class="form-group">
            <label for="labelname">Name</label> 
            <input type="hidden" class="form-control" id="oldname" name="oldname" aria-describedby="nameHelp" value="<%= (data.oldname)? data.oldname : data.name  %>" placeholder="Enter Name"> 
            <input type="text" class="form-control" id="labelname" name="name" aria-describedby="nameHelp" value="<%= data.name %>" placeholder="Enter Name"> 
          </div>
          <div class="form-group">
              <label for="labelemail1">Email address</label>
              <input type="text" class="form-control" id="labelemail1" name="email" aria-describedby="emailHelp" value="<%= data.email %>" placeholder="Enter email">
            </div>
          <div class="form-group">
            <label for="mobile">Mobile</label>
            <input type="text" class="form-control" id="labelmobile" name="mobile" value="<%= data.mobile %>" placeholder="Enter mobile">
          </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
  
  
  